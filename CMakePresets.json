{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 15,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vscode-conan-release",
            "displayName": "VSCode Conan Release",
            "description": "Configure using Conan toolchain in build/ and Ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
            },
            "toolchainFile": "${sourceDir}/build/conan_toolchain.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "vscode-conan-release",
            "configurePreset": "vscode-conan-release"
        }
    ],
    "testPresets": [
        {
            "name": "vscode-conan-release",
            "configurePreset": "vscode-conan-release"
        }
    ]
}
